{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background: #f6f7fb;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        }
        .login-card {
            max-width: 420px;
            margin: 10vh auto;
            background: #fff;
            border: 1px solid #e5e7eb;
            border-radius: 12px;
            padding: 32px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        }
        .login-card h1 {
            margin: 0 0 8px;
            font-size: 24px;
        }
        .login-card p {
            margin: 0 0 24px;
            color: #6b7280;
        }
        .field {
            display: flex;
            flex-direction: column;
            gap: 8px;
            margin-bottom: 16px;
        }
        label {
            font-weight: 600;
        }
        input {
            padding: 10px 12px;
            border: 1px solid #d1d5db;
            border-radius: 8px;
            font-size: 14px;
        }
        .alert {
            margin-bottom: 16px;
            padding: 12px 14px;
            border-radius: 8px;
            background: #fee2e2;
            color: #991b1b;
            border: 1px solid #fecaca;
        }
        button {
            width: 100%;
            padding: 12px 16px;
            border: none;
            border-radius: 8px;
            background: #111827;
            color: #fff;
            font-weight: 600;
            cursor: pointer;
        }
        button:hover {
            background: #1f2937;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="login-card">
        <h1>Connexion</h1>
        <p>Acces au back admin</p>

        {% if error %}
            <div class="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form method="post">
            <div class="field">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" value="{{ last_username }}" autocomplete="username" required autofocus>
            </div>

            <div class="field">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit">Se connecter</button>
        </form>
    </div>
{% endblock %}
